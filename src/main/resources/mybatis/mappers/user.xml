<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">

	<select id="login" parameterType="com.lunchwb.vo.UserVo" resultType="com.lunchwb.vo.UserVo">
		<![CDATA[
			select user_no userNo
			        ,user_email userEmail
			        ,user_name userName
			        ,user_grade userGrade
			from users
			where user_email = #{userEmail}
			and user_password = #{userPassword} 		
		]]>
	</select>
	
	<insert id="join" parameterType="com.lunchwb.vo.UserVo">
		<![CDATA[
			insert into users
			values (seq_user_no.nextval, #{userEmail}, #{userPassword}, #{userName}, #{userBirth}, #{userSex}, sysdate, 0)
		]]>
	</insert>

</mapper>